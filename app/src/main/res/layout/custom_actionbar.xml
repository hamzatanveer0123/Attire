<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorPrimary" >

    <AutoCompleteTextView
        android:id="@+id/shoppingListNearBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:ems="10"
        android:hint="Add more items ..."
        android:inputType="textPersonName"
        android:textColor="@color/black_overlay"
        android:textColorHint="@android:color/darker_gray"
        android:textColorLink="@android:color/holo_blue_dark"
        android:textCursorDrawable="@color/statsbar"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nearByText" />

    <ImageButton
        android:id="@+id/addItems"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/dropdown"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/nearByText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Change Attire ..."
        android:textColor="@android:color/background_light"
        android:textSize="26dp"
        android:layout_alignBottom="@+id/shoppingListNearBy"
        android:layout_toEndOf="@+id/addItems" />

</RelativeLayout>